<div class=" login-view">
  <div class="moooooo alert alert-error" style="display:none;">
    <button type="button" class="close" data-dismiss="alert">Ã—</button>
    <strong>Could not login!</strong> Either your email or password were incorrect. Please check and try again.
  </div>

  <div class="row-fluid">
    <div class="offset1 span3">
      <form class="form-vertical">
        <legend>Login</legend>
        <div class="control-group">
          <label class="control-label" for="username">Email</label>
          <div class="controls">
            <input type="email" id="username" placeholder="email address..">
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="password">Password</label>
          <div class="controls">
            <input type="password" id="password" placeholder="password...">
          </div>
        </div>
        <div class="control-group">
          <div class="controls">
            <button type="submit" class="btn btn-login">Login</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<% content_for :start do %>
  <script type="text/javascript">
    $(document).ready(function() {
      var view = new LoginView({ 
        el: $('div.login-view')
      }).render();
    });
  </script>
<% end %>
